generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}


model users {
  ID        Int       @id @default(autoincrement())
  Name      String
  Password  String
  Salt      String
  Email     String   @unique
  Phone     String?
  Address   String?
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  RoleID    Int
  FacultyID Int
}

model roles {
  ID        Int       @id @default(autoincrement())
  Name      String
  Description String

}

model faculties {
  ID        Int         @id @default(autoincrement())
}

model events {
  ID        Int         @id  @default(autoincrement())
}

model comments {
  ID        Int         @id  @default(autoincrement())
}

model notifications{
  ID        Int         @id  @default(autoincrement())

}

model files{
  ID        Int         @id  @default(autoincrement())
}

model contributions{
  ID        Int       @id @default(autoincrement())
  Name      String
  Content   String
  isPublic  Boolean
  isApproved Boolean
  CreatedAt DateTime  @default(now())
  UpdatedAt DateTime  @updatedAt
  EventID   Int
  UserID    Int
  StatusID  Int


}
